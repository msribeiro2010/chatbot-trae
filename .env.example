# Configurações da API OpenAI
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Configurações do servidor
PORT=3010
NODE_ENV=development

# Configurações do banco de dados
DB_PATH=./database.sqlite

# Configurações de upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Configurações de busca web
WEB_SEARCH_ENABLED=true

# Configurações de autenticação e segurança
LOGIN_PASSWORD=your-secure-password-here
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long

# Configurações de rate limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# Configurações de CORS (produção)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com